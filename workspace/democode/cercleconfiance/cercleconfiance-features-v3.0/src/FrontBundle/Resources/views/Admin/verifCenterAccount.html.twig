{% extends "FrontBundle::layoutFront.html.twig" %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block title %} Créer un Cercle dont vous serez le centre{% endblock %}

{% block content %}
    <section class="container marginBottom wow fadeInDown">
        <div class="row btn-tools">
            <div class="col-xs-6 text-left">
                <a href="{{ path('create') }}" class="btn btn-default btn-back" title="Retour"><i class="fa fa-arrow-left fa-fw"></i></a>
            </div>
        </div>
        <div class="row">
            <div class="section-header col-xs-8 col-xs-offset-2 col-sm-10 col-sm-offset-1 text-center">
                <h2 class="section-title text-center">Créer un « Cercle Confiance »</h2>
                <h3>dont le centre sera une personne déjà inscrite</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1 col-sm-12 col-sm-offset-0">
                <div class="form well createCircle">
                    {% if error is defined %}
                    <div class="row">
                        <div class="col-xs-8 col-xs-offset-2">
                            <div class="alert alert-danger">
                                {{ error }}
                            </div>
                        </div>
                    </div>
                    {% else %}
                    <div class="row text-left">
                        {{ form_start(form) }}
                        <div class="col-sm-6">
                            {{ form_row(form.username) }}
                        </div>

                        <div class="col-sm-6">
                            {{ form_row(form.password) }}
                        </div>

                        <div class="col-sm-6">
                            {{ form_row(form.circle.name) }}
                        </div>

                        <div class="col-sm-6">
                            {{ form_row(form.circle.offer) }}
                        </div>

                        <div class="col-sm-6">
                            {{ form_row(form.circle.number_circle_users) }}
                        </div>

                        <div class="col-sm-6 text-center">
                            {{ form_row(form.submit, { 'label': 'Créer le Cercle', 'attr': {'class': 'submitFormCC btn btn-default'} }) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
