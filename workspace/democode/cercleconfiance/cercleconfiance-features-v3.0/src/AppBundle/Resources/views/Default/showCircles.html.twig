{% extends 'FrontBundle::layoutFront.html.twig' %}
{% block links %}
    <!--<li class="scroll"><a href="/">Accueil</a></li>-->
    <li class="scroll"><a href="{{ path('presentation') }}">A propos</a></li>
    <li class="scroll"><a href="{{ path('services') }}">Services</a></li>
    <li class="scroll"><a href="{{ path('pres_objets') }}">Objets connectés</a></li>
    <li class="scroll active"><a href="{{ path('accueil') }}">Accès aux cercles</a></li>
{% endblock %}
{% block content %}
    <section>
        <div class="container-fluid circle">

            <div class="row text-center circleSub navAppli section-header">
                <div class="cols_divide_sm_by_2">
                  <div class="col-xs-8 col-sm-9 col-md-10">
                      <h1 class="circleTitle section-title">Mes Cercles</h1>
                      <!--<h3>Sélectionnez un cercle</h3>-->
                  </div>
                  <div class="col-xs-4 col-sm-3 col-md-2">
                      <a class="btn btn-success btn-add" href="{{ path('create') }}">Créer un nouveau cercle</a>
                  </div>
                </div>
            </div>

            <div class="row text-center margFooter">
                {% for CUser in CUsers %}

                  {% if CUser.circle.active == true %}
                    {% if CUsers|length > 2 %}
                    <div class="col-sm-6 col-md-4 circleBlock">
                    {% else %}
                    <div class="col-sm-6 col-md-6 circleBlock">
                    {% endif %}
                        <a href="{{ path('appli', {'token': CUser.circle.token}) }}" class="linkCircle">
                            <strong class="label label-primary">{{ CUser.circle.name }}</strong>
                            <hr/>
                            {% set sizeCircleUsers = CUser.circle.circleUsers | length %}
                            {% for circleUser in CUser.circle.circleUsers if circleUser.circleCenter == true %}
                                <img src="{% if circleUser.user.avatar != null %}{{ asset("uploads/" ~ circleUser.user.avatar) }}{% else %}{{ asset("assets/img/avatar.png") }}{% endif %}" class="img-circle circleItem" alt="{{ circleUser.user.firstname }} {{ circleUser.user.name }}">
                            {% endfor %}
                            {% for circleUser in CUser.circle.circleUsers if circleUser.circleCenter == false %}
                            {% if sizeCircleUsers == 2 %}
                            <span class="only-one">
                            {% endif %}
                                <img src="{% if circleUser.user.avatar != null %}{{ asset("uploads/" ~ circleUser.user.avatar) }}{% else %}{{ asset("assets/img/avatar.png") }}{% endif %}" class="img-circle circleMember" alt="{{ circleUser.user.firstname }} {{ circleUser.user.name }}">
                            {% if sizeCircleUsers == 2 %}
                            </span>
                            {% endif %}
                            {% endfor %}
                        </a>
                    </div>
                  {% endif %}
                {% endfor %}
            </div>
            <div class="row">
                <div class="col-xs-12 text-center">
                    <a class="btn btn-success btn-lg" href="{{ path('create') }}">Créer un nouveau cercle</a>
                </div>
            </div>

        </div>
    </section>
{% endblock %}
