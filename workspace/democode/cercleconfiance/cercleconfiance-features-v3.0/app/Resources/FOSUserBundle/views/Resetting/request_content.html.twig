{% trans_default_domain 'FOSUserBundle' %}
<div class="container">
    <div class="row userResettingRequest">
        <div class="col-sm-8 col-sm-offset-2">
            <header class="section-header">
                <h2 class="section-title text-center wow fadeInDown">{{ 'resetting.request.submit'|trans }}</h2>
            </header>
            {% if error %}
                <div class="alert alert-danger text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        </div>
        <div class="col-sm-8 col-sm-offset-2 form">
            <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                <div class="form-group">
                    <label class="control-label required" for="username">{{ 'resetting.request.username'|trans }}</label>
                    <input class="form-control" type="text" id="username" name="username" required="required" />
                </div>
                <div class="form-group text-center">
                    <input class="btn btn-default btn-info btn-block" type="submit" value="{{ 'resetting.request.submit'|trans }}" />
                </div>
            </form>
        </div>
    </div>
</div>